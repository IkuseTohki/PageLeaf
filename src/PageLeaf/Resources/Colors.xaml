<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- カラー値の定義 (アニメーション等で直接使用) -->
    <Color x:Key="PrimaryActionColor">#0078D4</Color>
    <Color x:Key="PrimaryActionHoverColor">#0063B1</Color>
    <Color x:Key="SwitchOffColor">#FFDDDDDD</Color>
    <Color x:Key="SecondaryTextColor">#666666</Color>

    <!-- ブラシの定義 (UIのプロパティ設定で使用) -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#DDDDDD" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F7F9FA" />

    <SolidColorBrush x:Key="BorderBrush" Color="#E1E1E1" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#333333" />
    <SolidColorBrush x:Key="PrimaryActionBrush" Color="{StaticResource PrimaryActionColor}" />
    <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="{StaticResource PrimaryActionHoverColor}" />

    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource PrimaryActionColor}" />
    <SolidColorBrush x:Key="SecondaryActionBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="AnnotationTextBrush" Color="{StaticResource SecondaryTextColor}" />

    <SolidColorBrush x:Key="SwitchOffBrush" Color="{StaticResource SwitchOffColor}" />

    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#EAEAEA" />
    <SolidColorBrush x:Key="SidebarSelectedBrush" Color="#E5F1FB" />
    <SolidColorBrush x:Key="SidebarSelectedTextBrush" Color="#005FB8" />

    <!-- ComboBox用ブラシ定義 -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FFF2F2F2" />
    <SolidColorBrush x:Key="ComboBoxHoverBackgroundBrush" Color="#FFE5E5E5" />
    <SolidColorBrush x:Key="ComboBoxPressedBackgroundBrush" Color="#FFD5D5D5" />
    <SolidColorBrush x:Key="ComboBoxDropDownBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="ComboBoxItemHoverBackgroundBrush" Color="#FFF0F0F0" />

</ResourceDictionary>
