<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 基本的な色定義 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFF8F8F8" />
    <!-- 少しグレーがかった白 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#FFACACAC" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FF333333" />
    <SolidColorBrush x:Key="PrimaryActionBrush" Color="#FF007ACC" />
    <SolidColorBrush x:Key="AccentBlueBrush" Color="#FF0078D4" />
    <!-- Modern Blue -->
    <SolidColorBrush x:Key="SecondaryActionBrush" Color="#FF666666" />
    <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="#FF1C97EA" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="Gray" />
    <SolidColorBrush x:Key="AnnotationTextBrush" Color="Gray" />

    <!-- ComboBox用ブラシ定義 -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FFF2F2F2" />
    <SolidColorBrush x:Key="ComboBoxHoverBackgroundBrush" Color="#FFE5E5E5" />
    <SolidColorBrush x:Key="ComboBoxPressedBackgroundBrush" Color="#FFD5D5D5" />
    <SolidColorBrush x:Key="ComboBoxDropDownBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="ComboBoxItemHoverBackgroundBrush" Color="#FFF0F0F0" />

</ResourceDictionary>
