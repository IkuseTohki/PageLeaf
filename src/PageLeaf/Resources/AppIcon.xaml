<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- PageLeaf Full Color Icon Drawing -->
    <DrawingImage x:Key="AppIconImage">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <!-- 本の表紙 (青色) -->
                <GeometryDrawing Brush="#FF007ACC">
                    <GeometryDrawing.Geometry>
                        <PathGeometry Figures="M10,30 Q50,40 90,30 L90,80 Q50,90 10,80 Z" />
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- ページ (白色) -->
                <GeometryDrawing Brush="White">
                    <GeometryDrawing.Geometry>
                        <PathGeometry Figures="M15,33 Q50,42 85,33 L85,77 Q50,87 15,77 Z" />
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- 中央の溝 -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#FFE0E0E0"
                             EndLineCap="Round"
                             StartLineCap="Round"
                             Thickness="1.5" />
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="50,42" EndPoint="50,83" />
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- 若葉グループ -->
                <DrawingGroup>
                    <DrawingGroup.Transform>
                        <TransformGroup>
                            <TranslateTransform X="62" Y="72" />
                        </TransformGroup>
                    </DrawingGroup.Transform>

                    <!-- 左：大 -->
                    <GeometryDrawing Brush="#FF4CAF50">
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M0,0 C-8,-12 -32,-18 -32,-42 C-12,-42 0,-25 0,0" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- 葉脈 (左) -->
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="White"
                                 EndLineCap="Round"
                                 StartLineCap="Round"
                                 Thickness="1.5" />
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M0,0 Q-5,-25 -24,-36" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="White" Thickness="0.8" />
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M-4,-12 Q-10,-8 -18,-7 M-8,-21 Q-14,-17 -24,-16 M-12,-30 Q-18,-26 -29,-25" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- 右：小 -->
                    <GeometryDrawing Brush="#FF8BC34A">
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M0,0 C4,-4 16,-8 16,-22 C8,-22 0,-14 0,0" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- 葉脈 (右) -->
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="White"
                                 EndLineCap="Round"
                                 StartLineCap="Round"
                                 Thickness="1.2" />
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M0,0 Q4,-12 11,-18" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

</ResourceDictionary>
