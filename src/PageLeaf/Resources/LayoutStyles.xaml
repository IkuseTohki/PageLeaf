<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- プロパティグリッド等のコンテナ用ボーダースタイル -->
    <Style x:Key="PropertyGridContainerStyle" TargetType="Border">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Background" Value="#05000000" />
        <Setter Property="BorderBrush" Value="{DynamicResource OutlineBaseBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- SettingsWindow 用のボーダースタイル -->
    <Style x:Key="SettingsWindowBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceBaseBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="25"
                                  Opacity="0.1"
                                  ShadowDepth="10"
                                  Color="Black" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- サイドバーパネル用ボーダースタイル -->
    <Style x:Key="SidebarPanelBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceLayer1Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource OutlineBaseBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="CornerRadius" Value="8,0,0,8" />
    </Style>

    <!-- パネル共通ツールバースタイル -->
    <Style x:Key="PanelToolbarBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceLayer1Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource OutlineBaseBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="5,2" />
        <Setter Property="Height" Value="28" />
    </Style>

    <!-- ツールバー風ボーダースタイル -->
    <Style x:Key="ToolBarLikeBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ToolBarBackgroundBrush}" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonHoverBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

</ResourceDictionary>