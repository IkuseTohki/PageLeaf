<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:PageLeaf.Utilities">

    <utils:DisplayModeToStringConverter x:Key="DisplayModeToStringConverter"/>

    <Style TargetType="MenuItem">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5,2"/>
    </Style>

    <!-- 共通のComboBoxスタイル -->
    <Style TargetType="ComboBox" x:Key="BaseComboBoxStyle">
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- モード選択用ComboBoxスタイル -->
    <Style TargetType="ComboBox" x:Key="DisplayModeComboBoxStyle" BasedOn="{StaticResource BaseComboBoxStyle}">
        <Setter Property="Width" Value="140"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource DisplayModeToStringConverter}}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CSSファイル選択用ComboBoxスタイル -->
    <Style TargetType="ComboBox" x:Key="CssFileComboBoxStyle" BasedOn="{StaticResource BaseComboBoxStyle}">
        <Setter Property="Width" Value="200"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="#FFE0E0E0"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

</ResourceDictionary>