<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:PageLeaf.Utilities">

    <!-- 基本的な色定義 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="BorderBrush" Color="#FFACACAC" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FF333333" />
    <SolidColorBrush x:Key="PrimaryActionBrush" Color="#FF007ACC" />
    <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="#FF1C97EA" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="Gray" />
    <SolidColorBrush x:Key="AnnotationTextBrush" Color="Gray" />

    <!-- 基本的なボタン用スタイル -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="15,5" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PrimaryButtonStyle"
           BasedOn="{StaticResource BaseButtonStyle}"
           TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryActionBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryActionHoverBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButtonStyle"
           BasedOn="{StaticResource BaseButtonStyle}"
           TargetType="Button">
        <Setter Property="Background" Value="#FFE0E0E0" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFD0D0D0" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- アイコンボタン用スタイル -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFE0E0E0" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5" />
                <Setter Property="Cursor" Value="Arrow" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 選択状態を持つアイコンボタン用スタイル -->
    <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Margin" Value="0,0,8,0" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFE0E0E0" />
                <Setter Property="BorderBrush" Value="#FFACACAC" />
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="#FFD0D0D0" />
                <Setter Property="BorderBrush" Value="#FF888888" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- つまみボタン（トグル）用スタイル -->
    <Style x:Key="ToggleHandleButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="#FFF8F8F8" />
                            <Setter TargetName="RootBorder" Property="BorderBrush" Value="#FF888888" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="5,2" />
    </Style>

    <!-- 共通のComboBoxスタイル -->
    <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Margin" Value="5,0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- モード選択用ComboBoxスタイル -->
    <Style x:Key="DisplayModeComboBoxStyle"
           BasedOn="{StaticResource BaseComboBoxStyle}"
           TargetType="ComboBox">
        <Setter Property="Width" Value="140" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource DisplayModeToStringConverter}}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CSSファイル選択用ComboBoxスタイル -->
    <Style x:Key="CssFileComboBoxStyle"
           BasedOn="{StaticResource BaseComboBoxStyle}"
           TargetType="ComboBox">
        <Setter Property="Width" Value="200" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="#FFE0E0E0" />
        <Setter Property="Padding" Value="2" />
    </Style>

    <Style x:Key="ToolBarLikeBorder" TargetType="Border">
        <Setter Property="Background" Value="#FFE0E0E0" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="BorderBrush" Value="#FFACACAC" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style x:Key="ToolBarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="5,2" />
        <Setter Property="Margin" Value="2" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFC5C5C5" />
                <Setter Property="BorderBrush" Value="#FF707070" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- フォーム用ラベルスタイル -->
    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="Margin" Value="0,5,0,0" />
        <Setter Property="Padding" Value="0,2" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- フォーム用セクションラベルスタイル (上部に余白あり) -->
    <Style x:Key="FormSectionLabelStyle"
           BasedOn="{StaticResource FormLabelStyle}"
           TargetType="Label">
        <Setter Property="Margin" Value="0,15,0,0" />
    </Style>

    <!-- ダイアログ用ボタンスタイル -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="Margin" Value="5,0" />
    </Style>

    <!-- フォーム用テキストボックススタイル -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="0,2,0,5" />
        <Setter Property="Padding" Value="3" />
    </Style>

    <!-- フォーム用コンボボックススタイル -->
    <Style x:Key="FormComboBoxStyle"
           BasedOn="{StaticResource BaseComboBoxStyle}"
           TargetType="ComboBox">
        <Setter Property="Margin" Value="0,2,0,5" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <!-- フォーム用チェックボックススタイル -->
    <Style x:Key="FormCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- フォーム用ヘッダースタイル -->
    <!-- フォーム用コンテナスタイル -->
    <Style x:Key="FormContainerStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="10" />
    </Style>

    <!-- SettingsWindow 用のボーダースタイル -->
    <Style x:Key="SettingsWindowBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="0,0,0,10" />
    </Style>

    <!-- セクション見出し用ラベルスタイル -->
    <Style x:Key="SectionHeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Margin" Value="0,20,0,5" />
    </Style>

    <!-- 最初のセクション用（マージン調整） -->
    <Style x:Key="FirstSectionHeaderLabelStyle"
           BasedOn="{StaticResource SectionHeaderLabelStyle}"
           TargetType="Label">
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <!-- 注釈テキスト用スタイル -->
    <Style x:Key="AnnotationTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="Margin" Value="5,2,0,10" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

</ResourceDictionary>
