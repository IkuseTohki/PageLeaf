<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 画像リソース定義 -->
    <BitmapImage x:Key="CssLogoImage" UriSource="/Resources/css.png" />

    <!-- モード選択用ComboBoxスタイル -->
    <Style x:Key="DisplayModeComboBoxStyle"
           BasedOn="{StaticResource BaseComboBoxStyle}"
           TargetType="ComboBox">
        <Setter Property="Width" Value="140" />
        <Setter Property="ItemTemplate" Value="{StaticResource DisplayModeItemTemplate}" />
    </Style>

    <!-- CSSファイル選択用ComboBoxスタイル -->
    <Style x:Key="CssFileComboBoxStyle"
           BasedOn="{StaticResource BaseComboBoxStyle}"
           TargetType="ComboBox">
        <Setter Property="Width" Value="200" />
        <Setter Property="ItemTemplate" Value="{StaticResource CssFileItemTemplate}" />
    </Style>

    <!-- ダイアログ用ボタンスタイル -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="Margin" Value="5,0" />
    </Style>

</ResourceDictionary>