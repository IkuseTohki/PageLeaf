<Window x:Class="PageLeaf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:PageLeaf.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PageLeaf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="clr-namespace:PageLeaf.Utilities"
        xmlns:viewmodels="clr-namespace:PageLeaf.ViewModels"
        xmlns:views="clr-namespace:PageLeaf.Views"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="PageLeaf Markdown Editor"
        Width="1000"
        Height="600"
        behaviors:FileDropBehavior.Command="{Binding OpenFileByPathCommand}"
        Icon="{StaticResource AppIconImage}"
        mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="S"
                    Command="{Binding SaveFileCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="S"
                    Command="{Binding SaveAsFileCommand}"
                    Modifiers="Control+Shift" />
        <KeyBinding Key="O"
                    Command="{Binding OpenFileCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="N"
                    Command="{Binding NewDocumentCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="V"
                    Command="{Binding PasteImageCommand}"
                    Modifiers="Control+Shift" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Menu -->
            <RowDefinition Height="Auto" />
            <!-- ToolBar -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="{StaticResource MenuFileHeader}">
                <MenuItem Command="{Binding NewDocumentCommand}"
                          Header="{StaticResource MenuFileNewHeader}"
                          InputGestureText="Ctrl+N" />
                <MenuItem Command="{Binding OpenFileCommand}"
                          Header="{StaticResource MenuFileOpenHeader}"
                          InputGestureText="Ctrl+O" />
                <Separator />
                <MenuItem Command="{Binding SaveFileCommand}"
                          Header="{StaticResource MenuFileSaveHeader}"
                          InputGestureText="Ctrl+S" />
                <MenuItem Command="{Binding SaveAsFileCommand}"
                          Header="{StaticResource MenuFileSaveAsHeader}"
                          InputGestureText="Ctrl+Shift+S" />
                <Separator />
                <MenuItem Header="{StaticResource MenuFileExportHeader}">
                    <MenuItem Header="{StaticResource MenuFileExportHtmlHeader}" />
                    <MenuItem Header="{StaticResource MenuFileExportPdfHeader}" />
                    <MenuItem Header="{StaticResource MenuFileExportWordDocxHeader}" />
                    <MenuItem Header="{StaticResource MenuFileExportImagePngHeader}" />
                </MenuItem>
                <Separator />
                <MenuItem Header="{StaticResource MenuFileExitHeader}" />
            </MenuItem>
            <MenuItem Header="{StaticResource MenuEditHeader}">
                <MenuItem Header="{StaticResource MenuEditCutHeader}" />
                <MenuItem Header="{StaticResource MenuEditCopyHeader}" />
                <MenuItem Header="{StaticResource MenuEditPasteHeader}" />
                <Separator />
                <MenuItem Header="{StaticResource MenuEditUndoHeader}" />
                <MenuItem Header="{StaticResource MenuEditRedoHeader}" />
            </MenuItem>
            <MenuItem Header="{StaticResource MenuViewHeader}">
                <MenuItem Header="{StaticResource MenuViewModelHeader}">
                    <MenuItem Header="{StaticResource MenuViewerViewModeHeader}" />
                    <MenuItem Header="{StaticResource MenuViewMarkdownEditModeHeader}" />
                    <MenuItem Header="{StaticResource MenuViewRealtimeEditModeHeader}" />
                </MenuItem>
                <MenuItem Header="{StaticResource MenuViewCssSelectHeader}" />
            </MenuItem>
            <MenuItem Header="{StaticResource MenuSettingsHeader}">
                <MenuItem Command="{Binding ShowSettingsCommand}" Header="{StaticResource MenuSettingsSettingsHeader}" />
            </MenuItem>
            <MenuItem Header="{StaticResource MenuHelpHeader}">
                <MenuItem Command="{Binding ShowAboutCommand}" Header="{StaticResource MenuHelpAboutHeader}" />
            </MenuItem>
        </Menu>

        <!-- ToolBar -->
        <Border Grid.Row="1" Style="{StaticResource ToolBarLikeBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding AvailableModes}"
                              SelectedItem="{Binding Editor.SelectedMode}"
                              Style="{StaticResource DisplayModeComboBoxStyle}" />
                    <ComboBox ItemsSource="{Binding AvailableCssFiles}"
                              SelectedItem="{Binding SelectedCssFile}"
                              Style="{StaticResource CssFileComboBoxStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid x:Name="MainGrid" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="{Binding CssEditorColumnWidth, Mode=TwoWay, Converter={StaticResource DoubleToGridLengthConverter}}" />
                            <Setter Property="MinWidth" Value="200" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCssEditorVisible}" Value="False">
                                    <Setter Property="Width" Value="0" />
                                    <Setter Property="MinWidth" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- 左側の区画 (エディタ) -->
            <Grid Grid.Column="0">
                <TextBox x:Name="MarkdownEditor"
                         Margin="0"
                         behaviors:EditorTextInsertionBehavior.EditorService="{Binding Editor}"
                         behaviors:MarkdownEditorBehavior.IsEnabled="True"
                         AcceptsReturn="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Text="{Binding Editor.EditorText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         Visibility="{Binding Editor.IsMarkdownEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <wv2:WebView2 x:Name="MarkdownViewer"
                              Margin="0"
                              utils:WebBrowserHelper.Html="{Binding Editor.HtmlFilePath}"
                              utils:WebBrowserHelper.InjectedCss="{Binding CssEditorViewModel.PreviewCss}"
                              Visibility="{Binding Editor.IsViewerVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <!-- 境界線 (GridSplitterはMainGridの直下である必要がある) -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"
                          Visibility="{Binding IsCssEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Popupの位置を決定するためのアンカー (Column 1に配置) -->
            <Control x:Name="PopupAnchor"
                     Grid.Column="1"
                     Width="0"
                     Height="0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Visibility="Hidden" />

            <!-- つまみボタン (Popupを使用してWebView2のAirspace問題を回避) -->
            <Popup x:Name="TogglePopup"
                   behaviors:PopupFollowBehavior.IsEnabled="True"
                   AllowsTransparency="True"
                   IsOpen="True"
                   Placement="Left"
                   PlacementTarget="{Binding ElementName=PopupAnchor}"
                   StaysOpen="True">
                <Popup.Style>
                    <Style TargetType="Popup">
                        <Setter Property="HorizontalOffset" Value="8" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCssEditorVisible}" Value="False">
                                <Setter Property="HorizontalOffset" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Popup.Style>
                <Button Padding="0"
                        Command="{Binding ToggleCssEditorCommand}"
                        Style="{StaticResource ToggleHandleButtonStyle}">
                    <Path Width="8"
                          Height="8"
                          Fill="{StaticResource PrimaryTextBrush}"
                          Stretch="Uniform">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Data" Value="{StaticResource ChevronLeftIconGeometry}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCssEditorVisible}" Value="True">
                                        <Setter Property="Data" Value="{StaticResource ChevronRightIconGeometry}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Button>
            </Popup>

            <Border Grid.Column="2" Visibility="{Binding IsCssEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <views:CssEditorView DataContext="{Binding CssEditorViewModel}" />
            </Border>
        </Grid>
    </Grid>
</Window>
