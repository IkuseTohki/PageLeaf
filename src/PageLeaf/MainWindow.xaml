<Window x:Class="PageLeaf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:behaviors="clr-namespace:PageLeaf.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PageLeaf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="clr-namespace:PageLeaf.Utilities"
        xmlns:viewmodels="clr-namespace:PageLeaf.ViewModels"
        xmlns:views="clr-namespace:PageLeaf.Views"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="PageLeaf Markdown Editor"
        Width="1000"
        Height="600"
        behaviors:FileDropBehavior.Command="{Binding OpenFileByPathCommand}"
        Icon="{StaticResource AppIconImage}"
        mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="S"
                    Command="{Binding SaveFileCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="S"
                    Command="{Binding SaveAsFileCommand}"
                    Modifiers="Control+Shift" />
        <KeyBinding Key="O"
                    Command="{Binding OpenFileCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="N"
                    Command="{Binding NewDocumentCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="V"
                    Command="{Binding PasteImageCommand}"
                    Modifiers="Control+Shift" />
        <KeyBinding Key="Left"
                    Command="{Binding ToggleDisplayModeCommand}"
                    Modifiers="Alt+Shift" />
        <KeyBinding Key="Right"
                    Command="{Binding ToggleDisplayModeCommand}"
                    Modifiers="Alt+Shift" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Menu -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="{StaticResource MenuFileHeader}">
                <MenuItem Command="{Binding NewDocumentCommand}"
                          Header="{StaticResource MenuFileNewHeader}"
                          InputGestureText="Ctrl+N" />
                <MenuItem Command="{Binding OpenFileCommand}"
                          Header="{StaticResource MenuFileOpenHeader}"
                          InputGestureText="Ctrl+O" />
                <Separator />
                <MenuItem Command="{Binding SaveFileCommand}"
                          Header="{StaticResource MenuFileSaveHeader}"
                          InputGestureText="Ctrl+S" />
                <MenuItem Command="{Binding SaveAsFileCommand}"
                          Header="{StaticResource MenuFileSaveAsHeader}"
                          InputGestureText="Ctrl+Shift+S" />
            </MenuItem>
            <MenuItem Header="{StaticResource MenuSettingsHeader}">
                <MenuItem Command="{Binding ShowSettingsCommand}" Header="{StaticResource MenuSettingsSettingsHeader}" />
            </MenuItem>
            <MenuItem Header="{StaticResource MenuHelpHeader}">
                <MenuItem Command="{Binding ShowCheatSheetCommand}" Header="チートシート" />
                <MenuItem Command="{Binding ShowAboutCommand}" Header="{StaticResource MenuHelpAboutHeader}" />
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid x:Name="MainGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="{Binding CssEditorColumnWidth, Mode=TwoWay, Converter={StaticResource DoubleToGridLengthConverter}}" />
                            <Setter Property="MinWidth" Value="250" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCssEditorVisible}" Value="False">
                                    <Setter Property="Width" Value="0" />
                                    <Setter Property="MinWidth" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- 左側の区画 (エディタ) -->
            <Grid Grid.Column="0">
                <avalonEdit:TextEditor x:Name="MarkdownEditor"
                                       Margin="0"
                                       behaviors:AvalonEditBehavior.EnableTextBinding="True"
                                       behaviors:AvalonEditBehavior.SyntaxHighlighting="Markdown"
                                       behaviors:AvalonEditBehavior.Text="{Binding Editor.EditorText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       behaviors:EditorFocusBehavior.EditorService="{Binding Editor}"
                                       behaviors:EditorFocusBehavior.TargetMode="Markdown"
                                       behaviors:EditorScrollBehavior.EditorService="{Binding Editor}"
                                       behaviors:EditorTextInsertionBehavior.EditorService="{Binding Editor}"
                                       behaviors:MarkdownEditorBehavior.IsEnabled="True"
                                       behaviors:MarkdownEditorBehavior.ToggleDisplayModeCommand="{Binding ToggleDisplayModeCommand}"
                                       FontFamily="./Resources/Fonts/#Noto Sans Mono, ./Resources/Fonts/#Noto Sans JP"
                                       FontSize="{Binding Editor.EditorFontSize}"
                                       ShowLineNumbers="True"
                                       VerticalScrollBarVisibility="Auto"
                                       Visibility="{Binding Editor.IsMarkdownEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       WordWrap="True" />

                <wv2:WebView2 x:Name="MarkdownViewer"
                              Margin="0"
                              behaviors:EditorFocusBehavior.EditorService="{Binding Editor}"
                              behaviors:EditorFocusBehavior.TargetMode="Viewer"
                              behaviors:EditorScrollBehavior.EditorService="{Binding Editor}"
                              utils:WebBrowserHelper.Html="{Binding Editor.HtmlFilePath}"
                              utils:WebBrowserHelper.InjectedCss="{Binding CssEditorViewModel.PreviewCss}"
                              Visibility="{Binding Editor.IsViewerVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!-- Overlay Buttons Anchor -->
                <Grid Margin="0,5,100,0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top">
                    <Rectangle x:Name="OverlayButtonsAnchor"
                               Width="0"
                               Height="0" />
                </Grid>

                <!-- Overlay Buttons (Popup to show over WebView2) -->
                <Popup behaviors:PopupFollowBehavior.IsEnabled="True"
                       AllowsTransparency="True"
                       IsOpen="{Binding IsActive, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=OverlayButtonsAnchor}"
                       StaysOpen="True">
                    <StackPanel Background="Transparent" Orientation="Horizontal">
                        <!-- Edit/Preview Toggle (Left) -->
                        <Button Margin="0,0,8,0"
                                Command="{Binding ToggleDisplayModeCommand}"
                                Style="{StaticResource FloatingButtonStyle}"
                                ToolTip="表示モード切替 (Alt+Shift+←/→)">
                            <Path Width="16"
                                  Height="16"
                                  Fill="{StaticResource AccentBlueBrush}"
                                  Stretch="Uniform">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Data" Value="{StaticResource PenIconGeometry}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Editor.SelectedMode}" Value="Markdown">
                                                <Setter Property="Data" Value="{StaticResource EyeIconGeometry}" />
                                            </DataTrigger>
                                            <!-- Dirty indicators -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Editor.SelectedMode}" Value="Viewer" />
                                                    <Condition Binding="{Binding Editor.IsDirty}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Data" Value="{StaticResource PenDirtyIconGeometry}" />
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Editor.SelectedMode}" Value="Markdown" />
                                                    <Condition Binding="{Binding Editor.IsDirty}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Data" Value="{StaticResource EyeDirtyIconGeometry}" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </Button>

                        <!-- TOC Button (Right) -->
                        <ToggleButton x:Name="TocButton"
                                      Command="{Binding ToggleTocCommand}"
                                      IsChecked="{Binding IsTocOpen, Mode=OneWay}"
                                      Style="{StaticResource FloatingToggleButtonStyle}"
                                      ToolTip="目次 (TOC)">
                            <Path Width="16"
                                  Height="16"
                                  Data="{StaticResource ListIconGeometry}"
                                  Fill="{StaticResource AccentBlueBrush}"
                                  Stretch="Uniform" />
                        </ToggleButton>
                    </StackPanel>
                </Popup>

                <!-- TOC Popup -->
                <Popup behaviors:PopupFollowBehavior.IsEnabled="True"
                       AllowsTransparency="True"
                       IsOpen="{Binding IsTocOpen}"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=TocButton}"
                       PopupAnimation="Fade"
                       StaysOpen="False">
                    <Border MinWidth="200"
                            MaxHeight="400"
                            Padding="5"
                            Background="{StaticResource PanelBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemTemplate="{StaticResource TocItemTemplate}" ItemsSource="{Binding TocItems}" />
                        </ScrollViewer>
                    </Border>
                </Popup>
            </Grid>

            <!-- 境界線 (GridSplitterはMainGridの直下である必要がある) -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"
                          Visibility="{Binding IsCssEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Popupの位置を決定するためのアンカー (Column 1に配置) -->
            <Control x:Name="PopupAnchor"
                     Grid.Column="1"
                     Width="0"
                     Height="0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Visibility="Hidden" />

            <!-- つまみボタン (Popupを使用してWebView2のAirspace問題を回避) -->
            <Popup x:Name="TogglePopup"
                   behaviors:PopupFollowBehavior.IsEnabled="True"
                   AllowsTransparency="True"
                   IsOpen="{Binding IsActive, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                   Placement="Left"
                   PlacementTarget="{Binding ElementName=PopupAnchor}"
                   StaysOpen="True">
                <Popup.Style>
                    <Style TargetType="Popup">
                        <Setter Property="HorizontalOffset" Value="8" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCssEditorVisible}" Value="False">
                                <Setter Property="HorizontalOffset" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Popup.Style>
                <Button Padding="0"
                        Command="{Binding ToggleCssEditorCommand}"
                        Style="{StaticResource ToggleHandleButtonStyle}">
                    <Path Width="8"
                          Height="8"
                          Fill="{StaticResource PrimaryTextBrush}"
                          Stretch="Uniform">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Data" Value="{StaticResource ChevronLeftIconGeometry}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCssEditorVisible}" Value="True">
                                        <Setter Property="Data" Value="{StaticResource ChevronRightIconGeometry}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Button>
            </Popup>

            <Border Grid.Column="2" Visibility="{Binding IsCssEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" MinHeight="100" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*">
                            <RowDefinition.Style>
                                <Style TargetType="RowDefinition">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FrontMatterViewModel.IsExpanded}" Value="False">
                                            <Setter Property="MaxHeight" Value="36" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RowDefinition.Style>
                        </RowDefinition>
                    </Grid.RowDefinitions>
                    <!-- CSS Editor -->
                    <views:CssEditorView Grid.Row="0" DataContext="{Binding CssEditorViewModel}" />

                    <!-- Vertical Splitter for Side Panel -->
                    <GridSplitter Grid.Row="1"
                                  Height="4"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Background="Transparent"
                                  ResizeBehavior="PreviousAndNext"
                                  Visibility="{Binding FrontMatterViewModel.IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <!-- Front Matter Editor -->
                    <views:FrontMatterEditorView Grid.Row="2" DataContext="{Binding FrontMatterViewModel}" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>