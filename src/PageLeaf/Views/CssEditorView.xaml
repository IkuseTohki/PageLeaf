<UserControl x:Class="PageLeaf.Views.CssEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PageLeaf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <!-- Panel Toolbar -->
            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                <Button Content="保存" HorizontalAlignment="Right"/>
            </Border>

            <!-- Tab Container -->
            <TabControl>
                <!-- General Tab -->
                <TabItem Header="全体">
                    <StackPanel Margin="5">
                        <Label Content="文字色:"/>
                        <TextBox Text="#000000"/>
                        <Label Content="背景色:"/>
                        <TextBox Text="#FFFFFF"/>
                    </StackPanel>
                </TabItem>

                <!-- Headings Tab -->
                <TabItem Header="見出し">
                    <StackPanel Margin="5">
                        <Label Content="対象見出し:"/>
                        <ComboBox>
                            <ComboBoxItem Content="H1"/>
                            <ComboBoxItem Content="H2"/>
                            <ComboBoxItem Content="H3"/>
                            <ComboBoxItem Content="H4"/>
                            <ComboBoxItem Content="H5"/>
                            <ComboBoxItem Content="H6"/>
                        </ComboBox>
                        <Label Content="文字色:"/>
                        <TextBox/>
                        <Label Content="スタイル:"/>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="太字"/>
                            <CheckBox Content="斜体"/>
                            <CheckBox Content="下線"/>
                            <CheckBox Content="取り消し線"/>
                        </StackPanel>
                        <Label Content="フォントサイズ:"/>
                        <TextBox/>
                        <Label Content="フォントファミリー:"/>
                        <TextBox/>
                        <CheckBox Content="項番の自動採番"/>
                    </StackPanel>
                </TabItem>

                <!-- Quote Tab -->
                <TabItem Header="引用">
                    <StackPanel Margin="5">
                        <Label Content="文字色:"/>
                        <TextBox/>
                        <Label Content="背景色:"/>
                        <TextBox/>
                        <Label Content="左枠線 色:"/>
                        <TextBox/>
                        <Label Content="左枠線 太さ:"/>
                        <TextBox/>
                        <Label Content="左枠線 種類:"/>
                        <ComboBox>
                            <ComboBoxItem Content="solid"/>
                            <ComboBoxItem Content="dotted"/>
                            <ComboBoxItem Content="dashed"/>
                        </ComboBox>
                    </StackPanel>
                </TabItem>

                <!-- List Tab -->
                <TabItem Header="リスト">
                    <StackPanel Margin="5">
                        <Label Content="マーカーの種類 (ul):"/>
                        <ComboBox>
                            <ComboBoxItem Content="disc"/>
                            <ComboBoxItem Content="circle"/>
                            <ComboBoxItem Content="square"/>
                        </ComboBox>
                        <Label Content="インデント:"/>
                        <TextBox/>
                    </StackPanel>
                </TabItem>

                <!-- Table Tab -->
                <TabItem Header="表">
                    <StackPanel Margin="5">
                        <Label Content="罫線 色:"/>
                        <TextBox/>
                        <Label Content="罫線 太さ:"/>
                        <TextBox/>
                        <Label Content="ヘッダー背景色:"/>
                        <TextBox/>
                        <Label Content="セル パディング:"/>
                        <TextBox/>
                    </StackPanel>
                </TabItem>

                <!-- Code Tab -->
                <TabItem Header="コード">
                    <StackPanel Margin="5">
                        <Label Content="文字色:"/>
                        <TextBox/>
                        <Label Content="背景色:"/>
                        <TextBox/>
                        <Label Content="フォントファミリー:"/>
                        <TextBox/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>
