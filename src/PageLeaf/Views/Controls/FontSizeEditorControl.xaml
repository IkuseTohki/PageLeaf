<UserControl x:Class="PageLeaf.Views.Controls.FontSizeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Root"
             d:DesignHeight="30"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0"
                  IsEditable="True"
                  Style="{StaticResource FormComboBoxStyle}"
                  Text="{Binding ElementName=Root, Path=Value, UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="12" />
            <ComboBoxItem Content="14" />
            <ComboBoxItem Content="16" />
            <ComboBoxItem Content="18" />
            <ComboBoxItem Content="20" />
            <ComboBoxItem Content="24" />
            <ComboBoxItem Content="28" />
            <ComboBoxItem Content="32" />
            <ComboBoxItem Content="36" />
            <ComboBoxItem Content="48" />
            <ComboBoxItem Content="1.0" />
            <ComboBoxItem Content="1.2" />
            <ComboBoxItem Content="1.5" />
            <ComboBoxItem Content="2.0" />
            <ComboBoxItem Content="100" />
            <ComboBoxItem Content="120" />
            <ComboBoxItem Content="150" />
        </ComboBox>

        <TextBlock Grid.Column="1"
                   Margin="5,0,0,5"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="Gray"
                   Text="{Binding ElementName=Root, Path=Unit}"
                   Visibility="{Binding ElementName=Root, Path=IsUnitVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>