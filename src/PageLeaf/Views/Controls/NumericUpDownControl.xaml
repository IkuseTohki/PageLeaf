<UserControl x:Class="PageLeaf.Views.Controls.NumericUpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Root"
             d:DesignHeight="30"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0"
                 Width="60"
                 Style="{StaticResource CompactFormTextBoxStyle}"
                 Text="{Binding ElementName=Root, Path=Value, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Column="1"
                    Margin="2,0,5,12"
                    VerticalAlignment="Center">
            <Button Width="18"
                    Height="12"
                    Click="UpButton_Click"
                    Style="{StaticResource IconButtonStyle}">
                <Path Width="8"
                      Height="8"
                      Data="{StaticResource ArrowUpIconGeometry}"
                      Fill="{StaticResource SecondaryTextBrush}"
                      Stretch="Uniform" />
            </Button>
            <Button Width="18"
                    Height="12"
                    Click="DownButton_Click"
                    Style="{StaticResource IconButtonStyle}">
                <Path Width="8"
                      Height="8"
                      Data="{StaticResource ArrowDownIconGeometry}"
                      Fill="{StaticResource SecondaryTextBrush}"
                      Stretch="Uniform" />
            </Button>
        </StackPanel>

        <TextBlock Grid.Column="2"
                   Margin="0,0,0,12"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Text="{Binding ElementName=Root, Path=Unit}"
                   Visibility="{Binding ElementName=Root, Path=IsUnitVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
