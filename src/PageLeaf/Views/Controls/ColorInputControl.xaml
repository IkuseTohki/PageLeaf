<UserControl x:Class="PageLeaf.Views.Controls.ColorInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PageLeaf.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:utilities="clr-namespace:PageLeaf.Utilities"
             x:Name="Root"
             d:DesignHeight="30"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <Border Width="120"
            Height="28"
            HorizontalAlignment="Left"
            Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 色のプレビュー -->
            <Border Grid.Column="0"
                    Width="14"
                    Height="14"
                    Margin="6,0,0,0"
                    HorizontalAlignment="Left"
                    Background="{Binding ElementName=Root, Path=ColorText, Converter={StaticResource StringToBrushConverter}}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="2" />

            <!-- テキスト入力 -->
            <TextBox Grid.Column="1"
                     Margin="4,0"
                     Padding="0"
                     VerticalAlignment="Center"
                     Background="Transparent"
                     BorderThickness="0"
                     CaretBrush="{DynamicResource PrimaryTextBrush}"
                     FontSize="12"
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     Text="{Binding ElementName=Root, Path=ColorText, UpdateSourceTrigger=PropertyChanged}" />

            <!-- ピッカーボタン (マウスオーバー時のみ表示) -->
            <Button Grid.Column="2"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Command="{Binding ElementName=Root, Path=SelectColorCommand}"
                    CommandParameter="{Binding ElementName=Root, Path=CommandParameter}"
                    ToolTip="色を選択">
                <Button.Style>
                    <Style BasedOn="{StaticResource IconButtonStyle}" TargetType="Button">
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=Root, Path=IsMouseOver}" Value="True">
                                <Setter Property="Opacity" Value="1" />
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Path Width="12"
                      Height="12"
                      Data="{StaticResource PaletteIconGeometry}"
                      Fill="{DynamicResource SecondaryTextBrush}"
                      Stretch="Uniform" />
            </Button>
        </Grid>
    </Border>
</UserControl>
