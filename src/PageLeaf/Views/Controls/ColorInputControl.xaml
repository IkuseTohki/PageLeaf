<UserControl x:Class="PageLeaf.Views.Controls.ColorInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PageLeaf.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:utilities="clr-namespace:PageLeaf.Utilities"
             x:Name="Root"
             d:DesignHeight="30"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <utilities:StringToBrushConverter x:Key="StringToBrushConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Width="20"
                Height="20"
                Margin="0,0,5,0"
                Background="{Binding ElementName=Root, Path=ColorText, Converter={StaticResource StringToBrushConverter}}"
                BorderBrush="Gray"
                BorderThickness="1" />

        <TextBox Grid.Column="1" Text="{Binding ElementName=Root, Path=ColorText, UpdateSourceTrigger=PropertyChanged}" />

        <Button Grid.Column="2"
                Width="30"
                Click="SelectColor_Click"
                Content="..." />
    </Grid>
</UserControl>
