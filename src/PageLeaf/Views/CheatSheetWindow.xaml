<Window x:Class="PageLeaf.Views.CheatSheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:PageLeaf.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="clr-namespace:PageLeaf.Utilities"
        xmlns:viewModels="clr-namespace:PageLeaf.ViewModels"
        Title="PageLeaf チートシート"
        Width="500"
        Height="650"
        MinWidth="460"
        d:DataContext="{d:DesignInstance viewModels:CheatSheetViewModel}"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      CornerRadius="0"
                      GlassFrameThickness="0,0,0,1"
                      ResizeBorderThickness="6" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <utils:CloseWindowCommand x:Key="CloseWindowCommand" />

        <!-- Tab Style -->
        <Style x:Key="CheatSheetTabStyle"
               BasedOn="{StaticResource HorizontalTabRadioButtonStyle}"
               TargetType="RadioButton">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="10,0" />
            <Setter Property="Padding" Value="0,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Padding="8,6"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,3">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <ContentPresenter VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryActionBrush}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBlueBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource AccentBlueBrush}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <CollectionViewSource x:Key="MarkdownItemsView" Source="{Binding MarkdownItems}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <CollectionViewSource x:Key="ShortcutItemsView" Source="{Binding ShortcutItems}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <!-- Group Header Style (Settings style: White + Line) -->
        <DataTemplate x:Key="GroupHeaderTemplate">
            <Border Margin="0,20,0,8"
                    Padding="0,0,0,8"
                    Background="Transparent"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <TextBlock FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Text="{Binding Name}" />
            </Border>
        </DataTemplate>

        <!-- Item Style -->
        <DataTemplate x:Key="CheatSheetItemTemplate">
            <Border Margin="0,2"
                    Padding="10,8"
                    Background="{DynamicResource WindowBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="130" />
                        <!-- Syntax -->
                        <ColumnDefinition Width="*" />
                        <!-- Description -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Related Shortcut (Right) -->
                    </Grid.ColumnDefinitions>

                    <!-- Syntax / Key -->
                    <Border Grid.Column="0"
                            Margin="0,0,12,0"
                            Padding="8,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="{DynamicResource PanelBackgroundBrush}"
                            CornerRadius="3">
                        <TextBlock FontFamily="Consolas, monospace"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Text="{Binding Syntax}" />
                    </Border>

                    <!-- Description & Note -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Text="{Binding Description}"
                                   TextWrapping="Wrap" />
                        <TextBlock x:Name="NoteText"
                                   Margin="0,2,0,0"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Text="{Binding Note}"
                                   TextWrapping="Wrap" />
                    </StackPanel>

                    <!-- Related Shortcut (Right Side) -->
                    <TextBlock x:Name="ShortcutText"
                               Grid.Column="2"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontFamily="Consolas, monospace"
                               FontSize="11"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Text="{Binding RelatedShortcut}" />
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Note}" Value="">
                    <Setter TargetName="NoteText" Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Note}" Value="{x:Null}">
                    <Setter TargetName="NoteText" Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelatedShortcut}" Value="">
                    <Setter TargetName="ShortcutText" Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelatedShortcut}" Value="{x:Null}">
                    <Setter TargetName="ShortcutText" Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Escape"
                    Command="{StaticResource CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.InputBindings>


    <Border Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              Direction="-90"
                              Opacity="0.15"
                              ShadowDepth="5" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Header / Tabs -->
                <RowDefinition Height="*" />
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar & Tabs -->
            <Grid Grid.Row="0" Height="44">
                <!-- 1. Center Tabs -->
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="1"
                            Orientation="Horizontal"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                    <RadioButton x:Name="TabMarkdown"
                                 GroupName="CheatSheetTabs"
                                 IsChecked="True"
                                 Style="{StaticResource CheatSheetTabStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Width="14"
                                  Height="14"
                                  Margin="0,0,6,0"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource PenIconGeometry}"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform" />
                            <TextBlock VerticalAlignment="Center" Text="Markdown 記法" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="TabShortcuts"
                                 GroupName="CheatSheetTabs"
                                 Style="{StaticResource CheatSheetTabStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Width="14"
                                  Height="14"
                                  Margin="0,0,6,0"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource ListIconGeometry}"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform" />
                            <TextBlock VerticalAlignment="Center" Text="ショートカット" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- 2. App Icon & Title (Left) -->
                <StackPanel Margin="15,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Orientation="Horizontal">
                    <Image Width="18"
                           Height="16"
                           Margin="0,0,8,0"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Source="{StaticResource AppIconImage}" />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="11"
                               FontWeight="Light"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Text="Cheat Sheet" />
                </StackPanel>

                <!-- 3. Close Button (Right) -->
                <Button Width="40"
                        Height="40"
                        Margin="0,0,2,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        behaviors:WindowCloseBehavior.IsEnabled="True"
                        Style="{StaticResource IconButtonStyle}"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Path Width="10"
                          Height="10"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="{StaticResource CloseIconGeometry}"
                          Fill="{DynamicResource SecondaryTextBrush}"
                          Stretch="Uniform" />
                </Button>
            </Grid>

            <Separator Grid.Row="0"
                       VerticalAlignment="Bottom"
                       Background="{DynamicResource BorderBrush}" />

            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="20,10,20,20">
                <!-- Markdown List -->
                <ScrollViewer Padding="0,0,12,0"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsChecked, ElementName=TabMarkdown, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding Source={StaticResource MarkdownItemsView}}">
                        <ItemsControl.GroupStyle>
                            <GroupStyle HeaderTemplate="{StaticResource GroupHeaderTemplate}" />
                        </ItemsControl.GroupStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource CheatSheetItemTemplate}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Shortcut List -->
                <ScrollViewer Padding="0,0,12,0"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsChecked, ElementName=TabShortcuts, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding Source={StaticResource ShortcutItemsView}}">
                        <ItemsControl.GroupStyle>
                            <GroupStyle HeaderTemplate="{StaticResource GroupHeaderTemplate}" />
                        </ItemsControl.GroupStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource CheatSheetItemTemplate}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
