<Window x:Class="PageLeaf.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:PageLeaf.Behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="設定"
        Width="450"
        behaviors:WindowDragBehavior.IsEnabled="True"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        mc:Ignorable="d">
    <Border Style="{StaticResource SettingsWindowBorderStyle}">
        <Grid Margin="20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Margin="0,0,0,20"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       Text="アプリケーション設定" />

            <StackPanel Grid.Row="1">
                <!-- Code Highlight Settings -->
                <Label Content="コードハイライト設定" Style="{StaticResource FirstSectionHeaderLabelStyle}" />

                <!-- Highlight.js Theme -->
                <Label Content="コードハイライト テーマ:" Style="{StaticResource FormLabelStyle}" />
                <ComboBox ItemsSource="{Binding AvailableThemes}"
                          SelectedItem="{Binding SelectedCodeBlockTheme}"
                          Style="{StaticResource FormComboBoxStyle}" />
                <TextBlock Style="{StaticResource AnnotationTextStyle}" Text="※コードブロックに適用される highlight.js のテーマを選択します。" />

                <!-- Override Flag -->
                <CheckBox Content="CSSエディタの設定でテーマを上書きする"
                          IsChecked="{Binding UseCustomCodeBlockStyle}"
                          Style="{StaticResource FormCheckBoxStyle}" />
                <TextBlock Margin="25,2,0,0"
                           LineHeight="15"
                           Style="{StaticResource AnnotationTextStyle}"
                           Text="※チェックすると、CSSエディタの「コード」タブでの設定がコードブロックに強制適用されます。チェックしない場合は、選択したテーマのデザインが優先されます。" />

                <!-- Image Settings -->
                <Label Content="画像貼り付け設定" Style="{StaticResource SectionHeaderLabelStyle}" />

                <Label Content="保存先フォルダ (相対パス):" Style="{StaticResource FormLabelStyle}" />
                <TextBox Style="{StaticResource FormTextBoxStyle}" Text="{Binding ImageSaveDirectory}" />
                <TextBlock Style="{StaticResource AnnotationTextStyle}" Text="※Markdownファイルからの相対パス。例: images" />

                <Label Content="ファイル名テンプレート:" Style="{StaticResource FormLabelStyle}" />
                <TextBox Style="{StaticResource FormTextBoxStyle}" Text="{Binding ImageFileNameTemplate}" />
                <TextBlock Style="{StaticResource AnnotationTextStyle}" Text="※変数: {Date}, {Time}, {FileName}" />

                <!-- Editor Settings -->
                <Label Content="エディタ設定" Style="{StaticResource SectionHeaderLabelStyle}" />

                <CheckBox Content="タブの代わりにスペースを使用する"
                          IsChecked="{Binding UseSpacesForIndent}"
                          Style="{StaticResource FormCheckBoxStyle}" />

                <Label Content="インデント幅 (スペース数):"
                       IsEnabled="{Binding UseSpacesForIndent}"
                       Style="{StaticResource FormLabelStyle}" />
                <TextBox IsEnabled="{Binding UseSpacesForIndent}"
                         Style="{StaticResource FormTextBoxStyle}"
                         Text="{Binding IndentSize}" />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Width="80"
                        Command="{Binding SaveCommand}"
                        Content="保存"
                        IsDefault="True"
                        Style="{StaticResource PrimaryButtonStyle}" />
                <Button Width="80"
                        Margin="10,0,0,0"
                        Command="{Binding CancelCommand}"
                        Content="キャンセル"
                        IsCancel="True"
                        Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
